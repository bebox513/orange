<div class="page-title">
  <p>利用者一覧</p>
</div>
<div class="care-recipient-search">
  <%= form_with url: search_care_recipients_path, method: :get, local: true do |f| %>
    <%= f.text_field :name, class: "form" %>
    <%= f.submit "検索する", class: "btn" %>
  <% end %>
</div>
<div class="care-recipient-btn">
  <%= link_to "利用者を作成する", new_care_recipient_path %>
</div>
<%= render 'care_recipients/care_recipients' %>
