<div class="message-contents">
  <% @messages.each do |m| %>
    <div>
      <%= link_to user_path(m.user) do %>
        <% if m.user.avatar.attached? %>
          <%= image_tag(m.user.avatar_resize, class: "small-avatar") %>
        <% else %>
          <i class="fas fa-user-circle small-avatar-none avatar"></i>
        <% end %>
        <p class="name"><%= m.user.name %></p>
      <% end %>
      <p><%= safe_join(m.content.split("\n"),tag(:br))%></p>
    </div>
  <% end %>
</div>
<div class="message-form-block">
  <div class="">
    <%= form_for @message do |f| %>
        <%= f.text_area :content %>
      <%= f.hidden_field :room_id, :value => @room.id %>
      <%= button_tag :type => "submit", :class =>"message-btn" do %>
        <i class="fas fa-paper-plane"></i>
      <% end %>
    <% end %>
  </div>
</div>
