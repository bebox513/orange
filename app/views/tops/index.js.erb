var button = "<%= @button %>";
if ("post" == button){
  $('#search').html("<%= escape_javascript(render 'posts/search') %>");
  $('#post-button').css({ 'background-color' : '#FF9800' } );
  $('#user-button').css({ 'background-color' : '#FFF8E1' } );

}else{
  $('#search').html("<%= escape_javascript(render 'users/search') %>");
  $('#user-button').css({ 'background-color' : '#FF9800' } );
  $('#post-button').css({ 'background-color' : '#FFF8E1' } );
}
