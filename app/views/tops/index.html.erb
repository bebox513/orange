<div class="page-title">
  <p>最新の投稿</p>
</div>
<div class="search-switch">
  <div>
    <p id="post-button"><%= link_to "投稿検索", tops_path(type: "post"), remote: true %></p>
    <p id="user-button"><%= link_to "ユーザー検索", tops_path(type: "user"), remote: true %></p>
  </div>
</div>
<div id="search">
  <%= render 'posts/search' %>
</div>
<div id="postList">
  <%= render 'posts/posts' %>
</div>
<div id="morePostBlock">
  <%= link_to_next_page @posts, 'もっと見る', id: 'morePost', params: { type: :posts }, remote: true %>
</div>
